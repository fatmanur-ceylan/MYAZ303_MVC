@model Word

<form method="post" asp-action="Edit">
    <input asp-for="WorId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kelime Güncelle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Word</label>
            <input asp-for="Wordname" class="form-control" />
            <span asp-validation-for="Wordname" class="text-danger"></span>
            <label>Word Title</label>
            <input asp-for="WordTitle" class="form-control" />
            <span asp-validation-for="WorTitle" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-controller="Word" asp-action="Index" class="btn btn-secondary" style="width:150px">Geri Dön</a>
    </div>
</form>